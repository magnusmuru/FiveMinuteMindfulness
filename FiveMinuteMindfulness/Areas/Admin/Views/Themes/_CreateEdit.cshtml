@using FiveMinuteMindfulness.Core.Dto
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FiveMinuteMindfulness.Core.Dto.Application.ThemeDto

<div class="form-group">
    <label asp-for="Url" class="control-label"></label>
    <input asp-for="Url" class="form-control"/>
    <span asp-validation-for="Url" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ColorPalette" class="control-label"></label>
    <input asp-for="ColorPalette" class="form-control"/>
    <span asp-validation-for="ColorPalette" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="User" class="control-label"></label>
    <select asp-for="UserId" class="form-select" asp-items="@(new SelectList(Model.UserDtos, nameof(UserDto.Id), nameof(UserDto.Username)))">
        <option>Select User</option>
    </select>
    <span asp-validation-for="UserId" class="text-danger"></span>
</div>
<br/>