@using FiveMinuteMindfulness.Core.Dto
@using FiveMinuteMindfulness.Core.Dto.Content
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FiveMinuteMindfulness.Core.Dto.Application.ThemeDto

<div class="form-group">
    <label asp-for="Url" class="control-label"></label>
    <input asp-for="Url" class="form-control"/>
    <span asp-validation-for="Url" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ColorPalette" class="control-label"></label>
    <input asp-for="ColorPalette" class="form-control"/>
    <span asp-validation-for="ColorPalette" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Assignment" class="control-label"></label>
    <select asp-for="AssignmentId" class="form-select" asp-items="@(new SelectList(Model.AssignmentDtos, nameof(AssignmentDto.Id), nameof(AssignmentDto.Title)))">
        <option>@FiveMinuteMindfulness.Resources.Models.Application.Theme.SelectAssignment</option>
    </select>
    <span asp-validation-for="AssignmentId" class="text-danger"></span>
</div>
<br/>