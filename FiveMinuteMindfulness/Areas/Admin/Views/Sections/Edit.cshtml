@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FiveMinuteMindfulness.Core.Dto.Content.SectionDto

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <h1>@FiveMinuteMindfulness.Resources.Web.Common.Edit</h1>

    <h4>@FiveMinuteMindfulness.Resources.Web.Common.Section</h4>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="All" class="text-danger"></div>
                <partial name="_CreateEdit" model="Model"/>
                <div class="form-group">
                    <input type="submit" value="@FiveMinuteMindfulness.Resources.Web.Common.Save" class="btn btn-primary"/> |
                    <a class="btn btn-secondary" asp-action="Index">@FiveMinuteMindfulness.Resources.Web.Common.BackToList</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }

</div>