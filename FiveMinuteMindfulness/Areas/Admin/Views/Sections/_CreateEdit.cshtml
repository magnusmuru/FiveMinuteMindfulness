@using Microsoft.AspNetCore.Mvc.TagHelpers
@using FiveMinuteMindfulness.Core.Enums
@model FiveMinuteMindfulness.Core.Dto.Content.SectionDto

<div class="form-group">
    <label asp-for="Title" class="control-label"></label>
    <input asp-for="Title" class="form-control"/>
    <span asp-validation-for="Title" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control"/>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ChapterType" class="control-label"></label>
    <select asp-for="ChapterType" class="form-select" asp-items="Html.GetEnumSelectList<ChapterType>()">
        <option>@FiveMinuteMindfulness.Resources.Models.Content.Chapter.SelectChapterType</option>
    </select>
    <span asp-validation-for="ChapterType" class="text-danger"></span>
</div>
<br/>