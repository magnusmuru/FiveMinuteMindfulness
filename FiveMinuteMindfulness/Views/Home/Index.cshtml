@using Microsoft.AspNetCore.Identity
@using FiveMinuteMindfulness.Core.Models
@inject SignInManager<User> SignInManager
@{
    ViewData["Title"] = FiveMinuteMindfulness.Resources.Web.Common.HomePage;
}

<body>

<div class="w-100 h-100">
    <div class="d-flex">
        <div class="w-50">
            <img class="page-image" src="https://source.unsplash.com/FtqY6goIY14"
                 alt="Single lotus flower on a lake."/>
        </div>
        <div class="w-50">
            <div class="padded-container">
                <div class="mb-5">
                    <h2>@FiveMinuteMindfulness.Resources.Web.Common.HiYou</h2>
                    <p>
                        @FiveMinuteMindfulness.Resources.Web.Common.Paragraph1
                    </p>
                    <p>
                        @FiveMinuteMindfulness.Resources.Web.Common.Paragraph2
                    </p>
                    <p>
                        @FiveMinuteMindfulness.Resources.Web.Common.Paragraph3
                    </p>
                </div>
                @if (SignInManager.IsSignedIn(User))
                {
                    <div>
                        <a class="btn btn-purple btn-purple-text" asp-area="Courses" asp-controller="Courses" asp-action="Index">@FiveMinuteMindfulness.Resources.Web.Common.Start</a>
                    </div>
                }
                else
                {
                    <div>
                        <a class="btn btn-purple btn-purple-text" asp-area="Identity" asp-page="/Account/Register">@FiveMinuteMindfulness.Resources.Web.Common.Start</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
</body>