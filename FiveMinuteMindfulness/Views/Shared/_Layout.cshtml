@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - FiveMinuteMindfulness</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/FiveMinuteMindfulness.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:300,400,500,600,700&display=swap" asp-append-version="true"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700&display=swap" asp-append-version="true"/>
    <script src="~/js/content.js" defer></script>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FiveMinuteMindfulness</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@FiveMinuteMindfulness.Resources.Web.Views.Shared._Layout.Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@FiveMinuteMindfulness.Resources.Web.Views.Shared._Layout.Privacy</a>
                    </li>
                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @FiveMinuteMindfulness.Resources.Web.Views.Shared._Layout.Admin
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Categories" asp-action="Index">@FiveMinuteMindfulness.Resources.Web.Views.Shared._Layout.Categories</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Sections" asp-action="Index">@FiveMinuteMindfulness.Resources.Web.Views.Shared._Layout.Sections</a>
                                </li>
                                <li>
                                    <br/>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Assignments" asp-action="Index">@FiveMinuteMindfulness.Resources.Web.Views.Shared._Layout.Assignments</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Chapters" asp-action="Index">@FiveMinuteMindfulness.Resources.Web.Views.Shared._Layout.Chapters</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Transcriptions" asp-action="Index">@FiveMinuteMindfulness.Resources.Web.Views.Shared._Layout.Transcriptions</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Themes" asp-action="Index">@FiveMinuteMindfulness.Resources.Web.Views.Shared._Layout.Themes</a>
                                </li>
                                <li>
                                    <br/>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Journals" asp-action="Index">@FiveMinuteMindfulness.Resources.Web.Views.Shared._Layout.Journals</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Notifications" asp-action="Index">@FiveMinuteMindfulness.Resources.Web.Views.Shared._Layout.Notifications</a>
                                </li>
                            </ul>
                        </li>
                    }
                    <partial name="_LanguageSelection"/>

                </ul>
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>
<div class="w-100">
    <main role="main">
        @RenderBody()
    </main>
</div>
@*<footer class="border-top footer text-muted bg-light">
    <div class="container">
        &copy; 2022 - FiveMinuteMindfulness
    </div>
</footer>*@
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/jquery.validate.globalize.js" asp-append-version="true"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>